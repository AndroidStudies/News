<org.attentiveness.news.list.ScrollChildSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_swipe_fresh_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.attentiveness.news.list.NewsListFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_news_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_loading_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_error"
            android:gravity="center"
            android:text="@string/tv_loading_error"
            android:visibility="gone" />

    </FrameLayout>
</org.attentiveness.news.list.ScrollChildSwipeRefreshLayout>