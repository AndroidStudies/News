<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.attentiveness.news.channel.NewsChannelFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_close" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/tv_my_channel" />

            <Button
                android:id="@+id/btn_edit_or_done"
                style="@style/Base.Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/btn_edit"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>

        <android.support.v7.widget.GridLayout
            android:id="@+id/gl_my_channel_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:layout_marginStart="-4dp"
            app:columnCount="4"
            app:useDefaultMargins="true">

            <include
                layout="@layout/item_news_channel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <include
                layout="@layout/item_news_channel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <include
                layout="@layout/item_news_channel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <include
                layout="@layout/item_news_channel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <include
                layout="@layout/item_news_channel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <include
                layout="@layout/item_news_channel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <include
                layout="@layout/item_news_channel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <include
                layout="@layout/item_news_channel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <include
                layout="@layout/item_news_channel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <include
                layout="@layout/item_news_channel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

        </android.support.v7.widget.GridLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/tv_channel_recommended" />

        </RelativeLayout>

        <android.support.v7.widget.GridLayout
            android:id="@+id/gl_channel_list_recommended"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:layout_marginStart="-4dp"
            app:columnCount="4"
            app:useDefaultMargins="true">

            <include
                layout="@layout/item_news_channel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <include
                layout="@layout/item_news_channel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <include
                layout="@layout/item_news_channel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <include
                layout="@layout/item_news_channel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <include
                layout="@layout/item_news_channel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <include
                layout="@layout/item_news_channel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <include
                layout="@layout/item_news_channel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <include
                layout="@layout/item_news_channel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <include
                layout="@layout/item_news_channel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

            <include
                layout="@layout/item_news_channel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1" />

        </android.support.v7.widget.GridLayout>

    </LinearLayout>

</LinearLayout>
